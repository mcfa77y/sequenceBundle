<%-- any content can be specified here e.g.: --%>
<%@ page pageEncoding="UTF-8" %>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>

<div>
    <h2 style="text-align: center;">HOW WOULD YOU LIKE TO UPLOAD A FILE?</h2>
    <div class="panel-section">
        <div class="row" style="margin: 2em 2em 2em 2em;">
            <div class="col-md-4">
                <div class="row" style="padding: 1em;">
                    <div class="col-md-12 edit-panel">
                        <div><h2>Option 1: Use a  *.FASTA file</h2></div>
                        <h3>SELECT A FASTA FILE FROM YOUR COMPUTER</h3>
                        <form id="fileSequenceForm">
                            <!-- The fileinput-button span is used to style the file input field as button -->


                            <span id="filename2"></span>
                            <div style="margin: 0px 15px 15px 15px; font-size:1.4em; font-weight: 400; padding:0.5em; color: grey;">
                                Protein, DNA or RNA *.FASTA files accepted. Maximum size of *.FASTA file should not exceed 1000 sequences and 1000 positions.
                            </div>
                            <!-- The global progress bar -->
                            <div id="progress" class="progress" style="display: none;">
                                <div style="width: 100%;" class="progress-bar progress-bar-success"></div>
                            </div><!-- #progress -->

                            <!-- The container for the uploaded files -->
                            <div id="messages" class="files"></div>
                            <div style="padding: 0px 1.5em 1.5em 1.5em;">
                                <select id="alignmentTypeFile" class="edit-dropdown" name="alignmentType"><option value="AMINOACIDS" selected="selected">AMINO ACIDS</option><option value="NUCLEOTIDES">NUCLEOTIDES</option><option value="RNA">RNA</option></select>
                            </div>
                            <span class="btn btn-success fileinput-button" style="margin-left: 20px;">
                                <i class="glyphicon glyphicon-search"></i>
                                <span>BROWSE AND VALIDATE</span>
                                <!-- The file input field used as target for the file upload widget -->
                                <input id="fu" data-url="/upload/seq" name="file" type="file">
                            </span><!-- #span -->
                        </form>
                    </div><!-- #col -->
                </div><!-- #row -->
            </div><!-- #col -->

            <div class="col-md-4">
                <div class="row" style="padding: 1em;">
                    <div class="col-md-12 edit-panel">
                        <div><h2>Option 2: Paste MSA data</h2></div>
                        <label class="section-title" for="fromPaste">PASTE YOUR MSA IN THE BOX BELOW</label>
                        <form id="pasteSequenceForm" action="/upload/seq2">
                            <div style="padding: 0px 1.5em 1.5em 1.5em;">
                                <textarea cols="30" rows="5" id="pasteSequence" name="pasteSequence"></textarea>
                            </div><!-- #padding-text -->
                            <div style="padding: 0px 1.5em 1.5em 1.5em;">
                                <select id="alignmentTypePaste" class="edit-dropdown" name="alignmentType"><option value="AMINOACIDS" selected="selected">AMINO ACIDS</option><option value="NUCLEOTIDES">NUCLEOTIDES</option><option value="RNA">RNA</option></select>
                            </div>
                            <div>
                                <input id="validatePaste" class="btn btn-use-example "  value="VALIDATE" type="submit" style="margin-left: 15px;">
                            </div>
                        </form>
                    </div><!-- #col -->
                </div><!-- #row -->
            </div><!-- #col -->

            <div class="col-md-4">
                <div class="row" style="padding: 1em;">
                    <div class="col-md-12 edit-panel">
                        <div><h2>Option 3: Use our example MSA</h2></div>
                        <div class="setting-row" style="border-bottom: none;"><label class="edit-settings" id="example-dataset" style="margin-left:10px;margin-right: 15px; line-height: 1.4em; border-bottom: none;">OUR EXAMPLE DATASET IS AN AMINO ACID SEQUENCE WITH XX SEQUENCES ON XX POSITIONS. IT WAS PROVIDED BY THE XX LABORATORY.</div>
                        <form id="useExampleForm">
                            <span id="useExampleButton" class="btn btn-use-example" style="margin-left: 20px;" type="submit">
                                <span>USE EXAMPLE</span>
                                <!-- The file input field used as target for the file upload widget -->
                            </span><!-- #span -->
                        </form>
                    </div><!-- #col-12 -->
                </div><!-- #row -->
            </div><!-- #col-4 -->

        </div><!-- #row -->

        <div class="row">
            <div class="col-md-8 col-md-offset-2" >
                <p class="upload-summary" style="display: none"></p>
            </div>
        </div><!-- #row -->

        <div class="row">
            <div class="col-md-8 col-md-offset-2"  >
                <p class="upload-error" style="display: none">The file you have uploaded exceeds 1000 positions or sequences. Please try a different MSA.</p>
            </div>
        </div><!-- #row -->

    </div><!-- #panel-section -->

    <div class="button-group" style="text-align: center;">
        <input id="createBundleButton" class="btn btn-primary btn-lg upload-btn"  value="CREATE BUNDLE" type="button" disabled="">
    </div> <!--  #button-group -->



</div>

<br/>


